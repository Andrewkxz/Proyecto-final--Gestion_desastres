<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="co.edu.uniquindio.gestiondesastres.controllers.InicioController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <top>
        <HBox alignment="CENTER" spacing="20">
            <Label text="Panel de Control - Gestión de Desastres" styleClass="title-label"/>
        </HBox>
    </top>
    
    <center>
        <VBox spacing="20">
            <!-- Panel de Zonas Afectadas -->
            <TitledPane text="Zonas Afectadas" expanded="true">
                <TableView fx:id="tablaZonasAfectadas">
                    <columns>
                        <TableColumn text="Zona" />
                        <TableColumn text="Nivel de Riesgo" />
                        <TableColumn text="Estado" />
                        <TableColumn text="Recursos Asignados" />
                    </columns>
                </TableView>
            </TitledPane>
            
            <!-- Panel de Estadísticas Rápidas -->
            <GridPane hgap="20" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100" />
                </columnConstraints>
                
                <Label text="Total Recursos Disponibles:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <Label fx:id="lblTotalRecursos" text="0" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                
                <Label text="Equipos Activos:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <Label fx:id="lblEquiposActivos" text="0" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            </GridPane>
        </VBox>
    </center>
    
    <right>
        <VBox spacing="10" prefWidth="200">
            <TitledPane text="Alertas Activas" expanded="true">
                <ListView />
            </TitledPane>
        </VBox>
    </right>
</BorderPane>