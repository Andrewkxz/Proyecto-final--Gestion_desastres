<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.gestiondesastres.controllers.LoginController">

    <children>

        <VBox spacing="18" alignment="CENTER">
            <padding>
                <Insets top="40" bottom="40" left="40" right="40"/>
            </padding>

            <Label text="Gestión de Desastres Naturales"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <Label fx:id="lblError" textFill="red"/>

            <TextField fx:id="txtId" promptText="ID de usuario" maxWidth="250"/>
            <PasswordField fx:id="txtPassword" promptText="Contraseña" maxWidth="250"/>

            <Button text="Iniciar Sesión" onAction="#login" maxWidth="250"/>

            <Hyperlink text="¿No tienes cuenta? Registrarse" onAction="#abrirRegistro"/>

        </VBox>

    </children>
</AnchorPane>
