<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.gestiondesastres.controllers.AdminController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <top>
        <VBox spacing="10">
            <Label text="Administración de Recursos y Equipos" styleClass="title-label"/>
            <Separator/>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL">

            <VBox spacing="10">
                <TitledPane text="Gestión de Recursos" expanded="true">

                    <VBox spacing="10">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <ComboBox fx:id="comboZonas" promptText="Seleccionar Zona"/>
                            <Button text="Asignar Recursos" onAction="#asignarRecursos"/>
                        </HBox>

                        <TableView fx:id="tablaRecursos">
                            <columns>
                                <TableColumn fx:id="colId" text="ID" />
                                <TableColumn fx:id="colTipo" text="Tipo" />
                                <TableColumn fx:id="colCantidad" text="Cantidad" />
                                <TableColumn fx:id="colEstado" text="Estado" />
                            </columns>
                        </TableView>
                    </VBox>

                </TitledPane>
            </VBox>

            <VBox spacing="10">
                <TitledPane text="Equipos de Rescate" expanded="true">
                    <TableView fx:id="tablaEquipos">
                        <columns>
                            <TableColumn text="ID Equipo" />
                            <TableColumn text="Miembros" />
                            <TableColumn text="Especialidad" />
                            <TableColumn text="Zona Asignada" />
                            <TableColumn text="Estado" />
                        </columns>
                    </TableView>
                </TitledPane>
            </VBox>

        </SplitPane>
    </center>

    <right>
        <VBox spacing="10" prefWidth="200">
            <TitledPane text="Acciones Rápidas" expanded="true">
                <VBox spacing="5">
                    <Button text="Nuevo Recurso" maxWidth="Infinity" onAction="#nuevoRecurso"/>
                    <Button text="Nuevo Equipo" maxWidth="Infinity" onAction="#nuevoEquipo"/>
                    <Button text="Generar Reporte" maxWidth="Infinity" onAction="#generarReporte"/>
                </VBox>
            </TitledPane>
        </VBox>
    </right>

</BorderPane>
